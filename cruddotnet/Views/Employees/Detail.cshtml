@model cruddotnet.Models.Entities.Employee

<h1>Detail Karyawan</h1>

<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.EmployeeId</td>
    </tr>
    <tr>
        <th>Nama</th>
        <td>@Model.EmployeeName</td>
    </tr>
    <tr>
        <th>Departemen</th>
        <td>@Model.Department?.DepartmentName</td>
    </tr>
</table>
<a asp-action="List" class="btn btn-secondary">Kembali</a>
