@model cruddotnet.Models.Entities.Employee
@{
    var departments = ViewBag.Departments as List<cruddotnet.Models.Entities.Department>;
}

<h1>Tambah Karyawan</h1>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Nama Karyawan</label>
        <input type="text" class="form-control" asp-for="EmployeeName" />
    </div>
    <div class="mb-3">
        <label class="form-label">Departemen</label>
        <select class="form-select" asp-for="DepartmentId">
            @foreach (var dept in departments)
            {
                <option value="@dept.DepartmentId">@dept.DepartmentName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success">Simpan</button>
</form>
