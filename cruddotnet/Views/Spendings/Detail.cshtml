
@model cruddotnet.Models.Entities.Spending

<h1>Detail Spending</h1>
<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.SpendingId</td>
    </tr>
    <tr>
        <th>Karyawan</th>
        <td>@Model.Employee?.EmployeeName</td>
    </tr>
    <tr>
        <th>Departemen</th>
        <td>@Model.Employee?.Department?.DepartmentName</td>
    </tr>
    <tr>
        <th>Tanggal</th>
        <td>@Model.SpendingDate.ToString("yyyy-MM-dd")</td>
    </tr>
    <tr>
        <th>Nilai</th>
        <td>@Model.Value.ToString("N2")</td>
    </tr>
</table>
<a asp-action="List" class="btn btn-secondary">Kembali</a>
