
@model cruddotnet.Models.Entities.Spending
@{
    var employees = ViewBag.Employees as List<cruddotnet.Models.Entities.Employee>;
}

<h1>Tambah Spending</h1>
<form method="post">
    <div class="mb-3">
        <label class="form-label">Karyawan</label>
        <select class="form-select" asp-for="EmployeeId">
            @foreach (var emp in employees)
            {
                <option value="@emp.EmployeeId">@emp.EmployeeName - @emp.Department.DepartmentName</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Tanggal</label>
        <input type="date" class="form-control" asp-for="SpendingDate" />
    </div>
    <div class="mb-3">
        <label class="form-label">Nilai</label>
        <input type="number" step="0.01" class="form-control" asp-for="Value" />
    </div>
    <button type="submit" class="btn btn-success">Simpan</button>
</form>
