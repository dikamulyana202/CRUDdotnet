@{
}

@model cruddotnet.Models.Entities.Department

<h1>Edit Department</h1>

@if(Model is null)
{
    <p>Data departtmen tidak ditemukan</p>
}
else {
    <form method="post">
        <div class="mt-5">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="DepartmentId" />
        </div>
        <div class="mt-5">
            <label class="form-label">Department Name</label>
            <input type="text" class="form-control" asp-for="DepartmentName" />
        </div>

        <div class="mt-5">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}